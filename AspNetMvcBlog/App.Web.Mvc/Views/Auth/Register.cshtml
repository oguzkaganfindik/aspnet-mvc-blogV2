@model App.Persistence.DTOs.RegisterUserDto

@{
    Layout = "_LayoutAuth";
}

<title>Register</title>
<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form asp-area="" asp-controller="Auth" asp-action="Register" method="post" class="mx-1 mx-md-4">

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">

                                    <div class="col-sm-6">
                                        <input type="text" id="Name" class="form-control" asp-for="UserName" />
                                        <label class="form-label mb-2" asp-for="UserName">Your Name</label>
                                        <span asp-validation-for="UserName" class="mb-2 text-danger"> </span>
                                    </div>

                                    <div class="col-sm-6">
                                        <input type="text" id="Surname" class="form-control" asp-for="UserSurname" />
                                        <label class="form-label mb-2" asp-for="UserSurname">Your Surname</label>
                                        <span asp-validation-for="UserSurname" class="mb-2 text-danger"> </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" id="Email" class="form-control" asp-for="UserEmail" />
                                    <label class="form-label mb-2" asp-for="UserEmail">Your Email</label>
                                    <span asp-validation-for="UserEmail" class="mb-2 text-danger"> </span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" id="Password" class="form-control" asp-for="UserPassword" />
                                        <label class="form-label mb-2" asp-for="UserPassword">Password</label>
                                        <span asp-validation-for="UserPassword" class="mb-2 text-danger"> </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <p class="text-success">@ViewBag.RegisterationMessage</p> @*bu konuda bir şey düşünün..*@
                                </div>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="ForgotPassword">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>