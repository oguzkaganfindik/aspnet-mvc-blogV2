@model App.Persistence.Data.Entity.PostComment

<div class="container">
  <div class="row mb-2">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h5>Yorum Silme</h5>
          @*<div asp-validation-summary="All"></div>*@
        </div>
        <div class="card-body">
          <form asp-controller="PostComment" asp-action="Delete" method="post" class="d-flex align-items-center">
            <div class="container">

              <div class="row mb-4">
                <div class="col">
                  <label asp-for="Comment" class="mb-2"></label>
                  <div class="container bg-secondary text-white rounded p-2">@Model.Comment</div>
                </div>
              </div>
              <div class="row mb-4" hidden>
                <div class="col">
                  <label asp-for="PostId" class="mb-2"></label>
                  <div class="container bg-secondary text-white rounded p-2">@Model.PostId</div>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col">
                  <button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
                  <a asp-controller="PostComment" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-primary" style="width:150px">Listeye Dön</a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>